usage () {
	echo "Usage: $0 [-s]"
	echo "	-s	Silence output"
	exit $1
}

check_for () {
	[ -e $LOG ] && echo >>$LOG
	A="Checking for $1 ... "
	echo "$A" >>$LOG
	[ -z $SFLAG ] && printf "$A"
}

compile () {
	rm -f ${TMPNAM}.o $TMPNAM
	$MAKE -f $OUTMK $TMPNAM >> $LOG 2>&1
}

test_result () {
	if [ $? -eq 0 ]; then
		echo success >>$LOG
		[ -z $SFLAG ] && echo yes
		[ -e $TMPC ] && rm -f $TMPC
		true
	else
		[ -z $SFLAG ] && echo no
		if [ -e $TMPC ]; then
			echo "Failed program:" >>$LOG
			pr -n -t $TMPC >>$LOG
			rm -f $TMPC
		fi
		false
	fi
}

check_for_make () {
	check_for "make(1)"

	cat <<EOT >$TMPMK
all:
	true
EOT
	make -f $TMPMK >> $LOG 2>&1
	test_result && {
		MAKE=make
		return
	}

	echo "Failed makefile:" >>$LOG
	pr -n -t $TMPMK >>$LOG

	check_for "bmake(1)"

	cat <<EOT >$TMPMK
all:
	true
EOT
	bmake -f $TMPMK >> $LOG 2>&1
	test_result && MAKE=bmake
}

check_for_strlcpy () {
	check_for "strlcpy(3)"

	cat <<EOT >$TMPC
#include <string.h>
int
main (int argc, char **argv) {
	char a[10];
	strlcpy(a, *argv, sizeof a);
	return 0;
}
EOT
	compile
	test_result && DEFS="$DEFS -DHAVE_STRLCPY"
}

check_for_strlcat () {
	check_for "strlcat(3)"

	cat <<EOT >$TMPC
#include <string.h>
int
main (int argc, char **argv) {
	char a[10];
	*a = 0;
	strlcat(a, *argv, sizeof a);
	return 0;
}
EOT
	compile
	test_result && DEFS="$DEFS -DHAVE_STRLCAT"
}

check_for_wcslcpy () {
	check_for "wcslcpy(3)"

	cat <<EOT >$TMPC
#include <stdio.h>
#include <wchar.h>
int
main (int argc, char **argv) {
	wchar_t a, b;
	a = getwchar();
	wcslcpy(&b, &a, 1);
	return 0;
}
EOT
	compile
	test_result && DEFS="$DEFS -DHAVE_WCSLCPY"
}

check_for_lib_curses () {
	LIB_CURSES="-lcurses"
	check_for $LIB_CURSES

	cat <<EOT >$TMPC
#include <curses.h>
int
main (int argc, char **argv) {
	return 0;
}
EOT
	gen_mk
	cat <<EOT >$OUTMK
$TMPNAM: ${TMPNAM}.o
	\$(CC) -o \$@ ${TMPNAM}.o $LIB_CURSES
EOT
	compile
	test_result && return

	LIB_CURSES="-lncurses"
	check_for $LIB_CURSES

	cat <<EOT >$TMPC
#include <curses.h>
int
main (int argc, char **argv) {
	return 0;
}
EOT
	gen_mk
	cat <<EOT >$OUTMK
$TMPNAM: ${TMPNAM}.o
	\$(CC) -o \$@ ${TMPNAM}.o $LIB_CURSES
EOT
	compile
	test_result
}

check_for_fixterm () {
	check_for fixterm

	cat <<EOT >$TMPC
#include <curses.h>
int
main (int argc, char **argv) {
	fixterm();
	return 0;
}
EOT
	gen_mk
	cat <<EOT >$OUTMK
$TMPNAM: ${TMPNAM}.o
	\$(CC) -o \$@ ${TMPNAM}.o $LIB_CURSES
EOT
	compile
	test_result && DEFS="$DEFS -DHAVE_FIXTERM"
}

check_for_resetterm () {
	check_for resetterm

	cat <<EOT >$TMPC
#include <curses.h>
int
main (int argc, char **argv) {
	resetterm();
	return 0;
}
EOT
	gen_mk
	cat <<EOT >$OUTMK
$TMPNAM: ${TMPNAM}.o
	\$(CC) -o \$@ ${TMPNAM}.o $LIB_CURSES
EOT
	compile
	test_result && DEFS="$DEFS -DHAVE_RESETTERM"
}

gen_mk () {
	rm -f $OUTMK
	[ -n "$DEFS" ] && echo "DEFINES=$DEFS" >> $OUTMK
	[ -n "$LIB_CURSES" ] && echo "LIB_CURSES=$LIB_CURSES" >> $OUTMK
	cat $INMK >> $OUTMK || exit 1
}

SFLAG=

while [ $# -gt 0 ]; do
	case $1 in
	-s) SFLAG=1;;
	*)
		echo "$0: $1: Unknown option" >&2
		usage 1;;
	esac
	shift
done

OUTMK=Makefile
INMK=${OUTMK}.in
CFG=config
TMPNAM=.$CFG
TMPMK=${TMPNAM}.mk
TMPC=${TMPNAM}.c
LOG=${CFG}.log
rm -f $OUTMK $LOG
MAKE=
DEFS=
LIB_CURSES=
gen_mk

check_for_make
#check_for_strlcpy
#check_for_strlcat
#check_for_wcslcpy
check_for_lib_curses
check_for_fixterm
check_for_resetterm

gen_mk
rm -f $TMPNAM*
